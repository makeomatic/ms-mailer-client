{
  "name": "ms-mailer-client",
  "version": "0.1.0",
  "description": "client for ms-mailer",
  "main": "./lib/index.js",
  "scripts": {
    "prepublish": "babel ./src -d ./lib --optional es7.objectRestSpread,es7.classProperties,es7.decorators",
    "test": "npm rebuild && BLUEBIRD_DEBUG=1 NODE_ENV=production ./node_modules/.bin/mocha --require ./test/babelhook.js --bail --timeout 10000 -R xunit > test-report-$(node -v).xml",
    "test-local": "NODE_ENV=development BLUEBIRD_DEBUG=1 ./node_modules/.bin/mocha --require ./test/babelhook.js"
  },
  "keywords": [
    "microservice",
    "amqp",
    "nodemailer",
    "mailer",
    "smtp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makeomatic/ms-mailer-client.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer-client/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer-client#readme",
  "devDependencies": {
    "babel-core": "^5.8.33",
    "babel-eslint": "^4.1.3",
    "chai": "^3.4.1",
    "eslint": "^1.9.0",
    "eslint-config-airbnb": "^1.0.0",
    "eslint-plugin-mocha": "^1.0.0",
    "mocha": "^2.3.3"
  },
  "dependencies": {
    "lodash": "^3.10.1",
    "ms-amqp-validation": "^0.2.2"
  }
}
